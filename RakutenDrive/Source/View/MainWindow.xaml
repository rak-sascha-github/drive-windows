<Window x:Class="RakutenDrive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        xmlns:resources="clr-namespace:RakutenDrive.Resources"
        mc:Ignorable="d"
        Title="Rakuten Drive" Height="714" Width="1280"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/Images/Icons/Logo_light.ico"
        >
    <Grid>
        <Rectangle Fill="#252A31" />
        <Rectangle>
            <Rectangle.Fill>
                <ImageBrush ImageSource="pack://application:,,,/Assets/Images/Login/welcome.png" Stretch="UniformToFill" />
            </Rectangle.Fill>
        </Rectangle>
        <!-- Canvas for Clickable Areas -->
        <Grid Margin="80,90,0,90" Width="532" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <svgc:SvgViewbox Grid.Row="0" Source="pack://application:,,,/Assets/Images/logo.svg" Height ="40" HorizontalAlignment="Left" Width="224" />
            <TextBlock Grid.Row="1" Margin="0 42 0 0" MaxWidth="420" HorizontalAlignment="Left" Text="{x:Static resources:Strings.login_window_optimized}" TextWrapping="Wrap" FontSize="48" FontWeight="Bold" Foreground="White" />
            <TextBlock Grid.Row="2" Margin="0 42 0 0" MaxWidth="420" HorizontalAlignment="Left" Text="{x:Static resources:Strings.login_window_affordable}" TextWrapping="Wrap" FontSize="20" Foreground="LightGray" />
            <Canvas Grid.Row="3" Margin="0 42 0 0">
                <Border Padding="18 12" Background="#0ca678" CornerRadius="4" MouseDown="OnLoginButtonClicked" Cursor="Hand">
                    <TextBlock Text="{x:Static resources:Strings.login_window_login}" FontSize="18" FontWeight="DemiBold" Foreground="White"/>
                </Border>
            </Canvas>
            <TextBlock Grid.Row="4" Text="{x:Static resources:Strings.login_window_web_browser}" FontSize="16" Foreground="LightGray"/>
        </Grid>
    </Grid>
</Window>
  